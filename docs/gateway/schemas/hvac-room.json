{
  "$id": "hvac-room.json",
  "title": "HVAC Room",
  "type": "object",
  "description": "HVAC room configuration",
  "required": ["id", "type"],
  "properties": {
    "id": {
      "type": "integer",
      "format": "int32",
      "description": "rule ID"
    },
    "type": {
        "type": "string",
        "const": "HVACRoom"
    },
    "temperature": {
      "type": "integer",
      "format": "int32",
      "description": "In tens of degrees of Celsius"
    },
    "hysteresis": {
      "type": "integer",
      "format": "int32",
      "description": "In tens of degrees of Celsius"
    },
    "temperatureSensorId": {
      "$ref": "temperature-sensor.json#/properties/id"
    },
    "windowSensorIds": {
      "type": "array",
      "description": "Opened window sensor ID-s that disable HVAC for that room",
      "items": {
        "$ref": "window-sensor.json#/properties/id"
      }
    }
  }
}
